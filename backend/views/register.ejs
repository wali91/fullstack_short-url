<%- include('partials/_header') %>

    <div class="container">
      <h3>Register</h3>
      <form method="POST" action="/users/register">
				<div class="form-group">
					<label for="email">Please enter your email:</label>
					<input type="text" style="width: 40%;" class="form-control" id="email" name="email"></input>
        </div>
				<div class="form-group">
					<label for="password">Please choose a password:</label>
					<input type="password" style="width: 40%;" class="form-control" id="password" name="password"></input>
        </div>
        <input type="submit" class="btn btn-primary" value="Register"></input>
      </form>
    </div>
  </body>
</html>